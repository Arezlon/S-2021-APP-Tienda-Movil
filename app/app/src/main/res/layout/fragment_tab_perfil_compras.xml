<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.perfil.TabComprasFragment">

    <TextView
        android:id="@+id/tvListaComprasVacia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscando..."
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/lvCompras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivListaComprasVacia"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/baseline_refresh_24"
        app:layout_constraintBottom_toTopOf="@+id/tvListaComprasVacia"
        app:layout_constraintEnd_toEndOf="@+id/tvListaComprasVacia"
        app:layout_constraintStart_toStartOf="@+id/tvListaComprasVacia" />

    <ListView
        android:id="@+id/lvCompras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>