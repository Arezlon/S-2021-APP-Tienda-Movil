<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.compra.CompraFragment">

    <ScrollView
        android:id="@+id/svCompras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCompraTituloPublicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="titulo publicacion"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvCompraCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cantidad"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCompraTituloPublicacion" />

                    <TextView
                        android:id="@+id/tvCompraImporte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$00000"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCompraId" />

                    <TextView
                        android:id="@+id/tvCompraFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00/00/0000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCompraVendedor" />

                    <TextView
                        android:id="@+id/tvCompraId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="compra #00000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCompraComprador" />

                    <TextView
                        android:id="@+id/tvCompraComprador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario comprador"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCompraCantidad" />

                    <TextView
                        android:id="@+id/tvCompraVendedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario vendedor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCompraImporte" />

                    <Button
                        android:id="@+id/btCompraReseña"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reseña"
                        app:cornerRadius="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>