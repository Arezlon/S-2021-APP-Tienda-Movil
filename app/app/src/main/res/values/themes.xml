<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TiendaMovil" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2AC2DD</item>
        <item name="colorPrimaryVariant">#1E6B9E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2AC2DD</item>
        <item name="colorSecondaryVariant">#2696AA</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#2AC2DD</item>
        <item name="android:windowBackground">#E1E1E1</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TiendaMovil.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TiendaMovil.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TiendaMovil.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>